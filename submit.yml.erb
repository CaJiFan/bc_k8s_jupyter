<%
   pwd_cfg = "c.ServerApp.password=u\'sha1:${SALT}:${PASSWORD_SHA1}\'"
   host_port_cfg = "c.ServerApp.base_url=\'/node/${HOST_CFG}/${PORT_CFG}/\'"

   configmap_filename = "ondemand_config.py"
   configmap_data = "c.ServerApp.port = 8080"
   utility_img = "harbor.ai-dev.i.telconet.net/telconet/telcoai/ood-k8s-utils@sha256:d32b80389ac3255adb26d57965cf6aa9cb10a072ded42b26f7d3ddcb50b64c97"

   user = OodSupport::User.new
   print(user)
%>
---
script:
  wall_time: "<%= bc_num_hours.to_i * 60 %>"
  native:
    nodeSelector:
      kubernetes.io/hostname: dgxh004dg
    container:
      name: "jupyter"
      image: "harbor.ai-dev.i.telconet.net/telconet/telcoai/scipy-notebook@sha256:a362bb726a261f561fb4fcf136fae2218a80fe674a52a3d7f3bb2eb530c8535a"
      command: "/usr/local/bin/start.sh /opt/conda/bin/jupyter lab --config=/tmp/ondemand_config.py"
      working_dir: /home/jovyan
      restart_policy: 'OnFailure'
      env:
        NB_UID: "1000"
        NB_USER: "jovyan"
        NB_GID: "1000"
        HOME: "/home/jovyan"
      port: "8080"
      cpu: "<%= num_cpus %>"
      memory: "<%= memory %>Gi"
    configmap:
      files:
        - filename: "<%= configmap_filename %>"
          data: |
            c.ServerApp.port = 8080
            c.ServerApp.ip = '0.0.0.0'
            c.ServerApp.disable_check_xsrf = True
            c.ServerApp.allow_origin = '*'
            c.Application.log_level = 'DEBUG'
          mount_path: '/tmp'
    configmap:
      files:
        - filename: "<%= configmap_filename %>"
          data: |
            c.NotebookApp.port = 8080
            c.NotebookApp.ip = '0.0.0.0'
            c.NotebookApp.disable_check_xsrf = True
            c.NotebookApp.allow_origin = '*'
            c.Application.log_level = 'DEBUG'
          mount_path: '/ood'
    mounts:
      - type: host
        name: home
        host_type: Directory
        path: <%= user.home %>
        destination_path: <%= user.home %>
    init_containers:
    - name: "init-secret"
      image: "<%= utility_img %>"
      command: 
      - "/bin/save_passwd_as_secret"
      - "user-<%= user.name %>"
    - name: "add-passwd-to-cfg"
      image: "<%= utility_img %>"
      command:
      - "/bin/bash"
      - "-c"
      - "source /bin/passwd_from_secret; source /bin/create_salt_and_sha1; /bin/add_line_to_configmap \\\"<%= pwd_cfg %>\\\" <%= configmap_filename %>"
    - name: "add-hostport-to-cfg"
      image: "<%= utility_img %>"
      command:
      - "/bin/bash"
      - "-c"
      - "source /bin/find_host_port; /bin/add_line_to_configmap \\\"<%= host_port_cfg %>\\\" <%= configmap_filename %>"
